 <div class="container mt-3">
  <h1>To-Do List</h1>

  <div class="border p-3 rounded">
  <ul class="list-group list-group-flush">
    <% @tasks.each do |task| %>
      <li class="list-group-item border-start border-bottom border-success my-1 text-black d-flex justify-content-between">
        <div>
          <% if task.completed == true %>
            <i class="fa-solid fa-square-check me-3" style="color: #4af7e3;"></i>
          <% else %>
            <i class="fa-solid fa-square fa-bounce me-3" style="color: #83c9c0;"></i>
          <% end %>
          <%= link_to task.title, task_path(task.id), style: "text-decoration:none" %>
        </div>
        <%= link_to "<i class='fa-solid fa-delete-left fa-lg' style='color: #f06f19;'></i>".html_safe, task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>
  </div>
 </div>
