<%= link_to "<i class='fa-solid fa-angles-left'></i>".html_safe, tasks_path%>

<h1 class="my-2">To-Do Item</h1>

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <%= @task.title %>
    <% if @task.completed == true %>
            <i class="fa-solid fa-square-check fa-bounce me-3" id='checkbox' style="color: #4af7e3;"></i>
          <% else %>
            <i class="fa-solid fa-square fa-bounce me-3" id='checkbox' style="color: #83c9c0;"></i>
          <% end %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= @task.details %></p>
    </blockquote>
  </div>
</div>
 <%= link_to "<button class='btn btn-info text-white my-3 mx-1'>Edit</button>".html_safe, edit_path %>
